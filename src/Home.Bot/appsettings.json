{
  "Bot": {
    "Token": "",
    "BashPath": "/bin/bash",
    "PowerShellPath": "/bin/pwsh"
  },

  "ConnectionStrings": {
    "Default": ""
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://srv-1:8500" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "DEV.HomeBot"
    }
  },

  "Seq": {
    "ServerUrl": "http://srv-1:8500",
    "ApiToken": "",
    "ObservedSignals": [ 40, 41, 43, 44 ]
  },

  "Notifier": {
    "Time": {
      "FromHour": "8",
      "ToHour": "22"
    }
  },

  "ConnectionAnalyser": {
    "Urls": [ "https://vk.com/", "https://yandex.ru/", "https://www.google.ru/" ]
  },

  "Proxy": {
    "UseProxy": false,
    "Socket": "address:port",
    "User": "",
    "Password": ""
  },

  "Home": {
    "Vk": {
      "VkActivityApiUrl": "http://srv-1:5132",
      "TrackedUserIds": [ 51885477, 8790237 ],
      "InactiveHoursLimit": 12
    },
    "ComputerManager": {
      "WarnMemoryUsagePercent": 50,
      "WarnCpuUsage": 1.1,
      "WarnTemperature": 55
    }
  }
}
